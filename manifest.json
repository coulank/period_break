{
    "name": "periodBreak",
    "author": "coulank",
    "version": "1",
    "manifest_version": 2,
    "description": "選択された要素の句読点の次を改行します",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": ["content.js"]
    }],
    "permissions": [
        "tabs", "contextMenus", "activeTab"
    ]
}